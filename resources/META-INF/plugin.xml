<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>ESPExceptionDecoder</name>
  <version>1.0</version>
  <vendor email="kluev.andrew@gmai.com">Kluev ANdrew</vendor>

  <description><![CDATA[
      Exception Stack Trace Decoder for ESP8266 and ESP32
    ]]></description>

  <change-notes><![CDATA[
      Inital port of https://github.com/me-no-dev/EspExceptionDecoder
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="EspExceptionDecoder" secondary="true" icon="/intellij-esp-exception-decoder/plus.png" anchor="right"
                factoryClass="com.kluev.espexceptiondecoder.EspExceptionDecoderWindowFactory"/>

    <applicationConfigurable instance="com.kluev.espexceptiondecoder.XtensaGdbOption" displayName="EspExceptionDecoder"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
